{
	"compilerOptions": {
	  "module": "commonjs",
	  "resolveJsonModule": true,
	  "esModuleInterop": true,
	  "target": "es6",
	  "noImplicitAny": true,
	  "moduleResolution": "node",
	  "sourceMap": false,
	  "experimentalDecorators": true,
	  "skipLibCheck": true,
	  "lib": [
		"es6",
		"dom"
	  ],
	  "outDir": "dist",
	  "baseUrl": "src",
	  "paths": {
		"~/*": [
		  "*"
		],
		"controller/*": ["controller/*"],
		"utils/*": ["utils/*"],
		"core/*": ["core/*"],
		"config/*": ["config/*"],
		"database/*": ["database/*"],
		"middleware/*": ["middleware/*"],
		"routes/*": ["routes/*"]
	  },
	},
	"include": [
	  "src/**/*"
	]
  }
  