{
  "name": "node-api",
  "version": "1.0.0",
  "description": "A Node.js API built with TypeScript and Express, using decorators for routing and organized folder structure for enhanced maintainability.",
  "main": "server.ts",
  "scripts": {
    "lint": "eslint .",
    "format": "eslint --fix .",
    "seed": "npx prisma db seed",
    "migrate:dev": "dotenv -e .dev.env -- npx prisma db push",
    "migrate:stage": "dotenv -e .stage.env -- npx prisma db push",
    "migrate:prod": "dotenv -e .prod.env -- npx prisma db push",
    "predev": "rimraf node_modules/.prisma && prisma generate",
    "dev": "cross-env NODE_ENV=dev nodemon -r tsconfig-paths/register src/server.ts",
    "start": "ts-node -r tsconfig-paths/register src/server.ts",
    "prod": "cross-env NODE_ENV=prod && prisma generate && ts-node -r tsconfig-paths/register src/server.ts",
    "build": "tsc && npx tsconfig-paths build -p tsconfig.json"
  },
  "keywords": [
    "Node.js",
    "TypeScript",
    "Express",
    "Routing Controllers",
    "API",
    "Decorators",
    "RESTful",
    "ORM",
    "MVC",
    "Middleware",
    "Folder Structure",
    "Prisma",
    "Database"
  ],
  "author": "github.com/jeeva-sd",
  "license": "ISC",
  "engines": {
    "node": ">= 14.0.0"
  },
  "prisma": {
    "schema": "./src/database/db1/schema.prisma",
    "seed": "dotenv -e .dev.env -- ts-node -r tsconfig-paths/register ./src/database/db1/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "axios": "^1.6.2",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "yup": "^1.3.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.2",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^7.3.0",
    "eslint": "^8.56.0",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.2"
  }
}